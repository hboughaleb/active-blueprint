<h2>change your password:</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: "new password:", required: true, autofocus: true, hint: ("note: minimum of #{@minimum_password_length} characters needed" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "please confirm your new password:", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "change my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
