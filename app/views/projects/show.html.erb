
<div class="container">

  <div class="section">
    <h1><%= @project.title %></h1>
    <p><%= @project.description %></p>
    <p><%= @project.projected_budget %></p>
    <p><%= @project.address %></p>
    <p><%= @project.start_date %></p>
    <p><%= @project.end_date %></p>
    <p><%= @project.status %></p>

    <div>
      <%= link_to "Edit Project", edit_project_path(@project), class:'button' %>
    </div>

    <dir>
      <%= link_to "Delete Project", @project, class:'button', method: :delete %>
    </dir>

    <div>
      <a href="#" class="btn-treehouse">message my team</a>
    </div>
  </div>
  <div class="section">
    <h2>Specialties  <%= link_to "Add a new specialty", new_project_specialty_path(@project) %></h2>

  </div>
  <div class="gantt-container" style="overflow: scroll;">
    <svg id="gantt"></svg>

    <%= form_tag project_specialty_path(@project), method: :patch, remote: true, id: "hidden_gantt_form" do %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :tasks, "", id: "gnatt_tasks_input"  %>
    <% end %>
  </div>
</div>
