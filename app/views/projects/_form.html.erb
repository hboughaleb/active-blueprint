
  <%= simple_form_for(@project) do |f| %>
    <% if @project.errors.any? %>
      <div id=“error_explanation”>
        <ul>
        <% @project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.input :start_date %>
      <%= f.input :end_date %>
      <%= f.input :description %>
      <%= f.input :projected_budget %>
      <%= f.input :address %>
      <%= f.input :status %>
    </div>
    <div class="form-actions">
      <%= f.submit %>
    </div>
  <% end %>
