<h1><%= @task.title %></h1>

<p><%= @task.specialty %></p>
<p><%= @task.priority %></p>
<p><%= @task.description %></p>
<p><%= @task.budget %></p>
<p><%= @task.status %></p>
<p><%= @task.start_date %></p>
<p><%= @task.end_date %></p>

<%= link_to "All tasks", project_tasks_path %>
<%= link_to 'Edit', edit_project_task_path(@project, @task) %>
<%= link_to  "Add a new task", new_project_task_path %>
<%= link_to "Delete task", project_task_path(@project, @task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>





